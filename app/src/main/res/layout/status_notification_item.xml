<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/white_1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/g3m_icon"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="黃金三分鐘"
                android:textSize="20dp"
                android:textColor="@color/BLUE_A400"/>
        </LinearLayout>

        <TextView
            android:id="@+id/englishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poor"
            android:textSize="18dp"
            android:textColor="@color/black_2"/>
        <TextView
            android:id="@+id/chineseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="窮、少"
            android:textSize="18dp"
            android:textColor="@color/BLUE_A400"/>
        <TextView
            android:id="@+id/exampleEnglishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poor"
            android:textSize="18dp"
            android:textColor="@color/black_2"/>
        <TextView
            android:id="@+id/exampleChineseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="窮、少"
            android:textSize="18dp"
            android:textColor="@color/BLUE_A400"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="下一個"
            android:textSize="20dp"
            android:textColor="@color/white_1"
            android:background="@drawable/button_blue"/>
        <Button
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="詳細"
            android:textSize="20dp"
            android:textColor="@color/white_1"
            android:background="@drawable/button_blue"/>
        <Button
            android:id="@+id/soundButton"
            android:layout_width="70dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_sound"/>
    </LinearLayout>
</LinearLayout>