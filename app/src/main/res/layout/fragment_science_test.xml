<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/questionWebView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"></WebView>
        <WebView
            android:id="@+id/chooesWebView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"></WebView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter your answer."
                android:textColorHint="@color/black_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="跳過"
                    android:textSize="25dp"
                    android:textColor="@color/white_1"
                    android:background="@drawable/background_selector_blue"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="詳細"
                    android:textSize="25dp"
                    android:textColor="@color/white_1"
                    android:background="@drawable/background_selector_blue"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="確認"
                    android:textSize="25dp"
                    android:textColor="@color/white_1"
                    android:background="@drawable/background_selector_blue"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="解答："
            android:textSize="25dp"
            android:textColor="@color/black_1"
            />
        <WebView
            android:id="@+id/answerWebView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"></WebView>
    </LinearLayout>
</ScrollView>
