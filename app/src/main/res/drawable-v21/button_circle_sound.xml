<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/GRAY_500">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/PINKY_500"></solid>
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/transparent"  />
                    <padding
                        android:left="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
            <item android:drawable="@android:drawable/ic_lock_silent_mode_off"></item>
        </layer-list>
    </item>
</ripple>