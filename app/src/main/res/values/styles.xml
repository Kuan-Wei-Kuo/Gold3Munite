<resources>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/BLUE_A400</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/BLUE_A700</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/GRAY_200</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView.Light">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="styleSelfCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox_blue</item>
    </style>
</resources>
